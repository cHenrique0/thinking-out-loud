
<div class="position-relative">
  <div class="position-absolute mt-3 top-0 start-50 translate-middle">
    {{> alert}}
  </div>
</div>

<a href="/user/profile" class="text-decoration-none mb-2">
  <i class="bi bi-arrow-left"></i>
  Back
</a>
<h1 class="fw-bold mb-3">Creating thought</h1>
<form action="/thoughts/create" method="POST">
  <div class="form-floating mb-3">
    <textarea
      class="form-control rounded-3"
      placeholder="What is on your mind?"
      id="title"
      name="title"
    ></textarea>
    <label for="title">What is on your mind?</label>
  </div>
  <button type="submit" class="btn btn-dark rounded-3">
    <i class="bi bi-check-lg"></i>
    Create
  </button>
</form>