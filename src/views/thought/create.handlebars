<div class="thought-form-container">
  <a href="/thoughts/dashboard">Back</a>
  <h1>Creating thoughts</h1>
  <form action="/thoughts/create" method="POST">
    <div class="form-control">
      <label for="title">Thought</label>
      <input
        autofocus
        type="text"
        name="title"
        placeholder="What is on your mind?"
      />
    </div>
    <button type="submit" class="btn bi bi-check-lg">
      Create
    </button>
  </form>
</div>