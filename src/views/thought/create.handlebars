<div class="d-flex flex-column">
  <a href="/thoughts/dashboard" class="text-decoration-none mb-2">
    <i class="bi bi-arrow-left"></i>
    Back
  </a>
  <h1 class="mb-3">Creating thought</h1>
  <form action="/thoughts/create" method="POST">
    <div class="form-floating mb-3">
      <textarea
        class="form-control rounded-3"
        placeholder="What is on your mind?"
        id="title"
        name="title"
        required
      ></textarea>
      <label for="title">What is on your mind?</label>
    </div>
    <button type="submit" class="btn btn-dark rounded-3">
      <i class="bi bi-check-lg"></i>
      Create
    </button>
  </form>
</div>