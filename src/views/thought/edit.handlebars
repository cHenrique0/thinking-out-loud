<div class="position-relative">
  <div class="position-absolute mt-5 top-0 start-50 translate-middle">
    {{> alert}}
  </div>
</div>

<div class="create-thought-container">
  <a href="/user/profile" class="text-decoration-none">
    <i class="bi bi-arrow-left"></i>
    Back
  </a>

  <h1 class="fw-bold mt-3">Editing the thought</h1>

  <div class="p-3 border rounded-3 mt-4">
    <form action="/thoughts/edit/{{thought.uuid}}" method="POST"
      class="has-validadtion d-flex flex-column justify-content-between">
      <div class="form-floating">
        <textarea class="form-control rounded-3" placeholder="Did you change your mind?" id="title" name="title"
          maxlength="100">{{thought.title}}</textarea>
        <label for="title">Did you change your mind?</label>
        <div class="d-flex justify-content-between mt-2 pe-3 mb-3">
          <button type="submit" class="btn btn-dark rounded-3 mt-3">
            <i class="bi bi-check-lg"></i>
            Save
          </button>
          <small class="d-flex text-muted">
            <p id="chars">100</p>/100
          </small>
        </div>
        <div class="invalid-feedback">
          Limit exceeded: 100 character
        </div>
      </div>
    </form>
  </div>
</div>