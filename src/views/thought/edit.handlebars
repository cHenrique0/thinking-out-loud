<div class="thought-form-container">
  <a href="/thoughts/dashboard">Back</a>
  <h1>Editing the thought</h1>
  <form action="/thoughts/edit/{{thought.uuid}}" method="POST">
    <div class="form-control">
      <label for="title">Thought</label>
      <input type="text" name="title" value="{{thought.title}}" />
    </div>
    <button type="submit" class="btn">Save</button>
  </form>
</div>