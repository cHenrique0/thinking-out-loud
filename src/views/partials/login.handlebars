
{{> alert}}

<form action="/login" method="post" class="needs-validation" novalidate>
  <div class="input-group mb-3">
    <i class="input-group-text bi bi-person-fill"></i>
    <div class="form-floating">
      <input
        type="email"
        class="form-control"
        {{! id="email" }}
        name="email"
        placeholder="name@example.com"
        required
      />
      <label for="email">Email address</label>
    </div>
  </div>
  <div class="input-group mb-3">
    <i class="input-group-text bi bi-lock-fill"></i>
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        {{! id="password" }}
        name="password"
        placeholder="Password"
        required
      />
      <label for="password">Password</label>
    </div>
  </div>
  <button class="w-100 mb-2 btn btn-lg rounded-3 btn-dark" type="submit">
    Login
  </button>
  <hr class="my-4" />
  <a href="#">Forgot password?</a>
  <p>Don't have an account?
    <a href="/signup" data-bs-toggle="modal" data-bs-target="#modalSignup">
      Sign up
    </a>
  </p>
</form>