<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thinking out loud</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <nav class="menu">
      <div class="logo-container">
        <a href="/">
          <img src="/img/logo.png" alt="Thinking Out Loud" id="logo-img" />
        </a>
        <a href="/" id="logo-title">Thinking Out Loud</a>
      </div>
      <ul>
        <li>
          <a href="/thoughts" class="bi bi-house-fill">
            Thoughts
          </a>
        </li>
        {{#if session.userid}}
          <li>
            <a href="/thoughts/dashboard" class="bi bi-layout-text-window">
              Dashboard
            </a>
          </li>
          <li>
            <a href="/logout" class="bi bi-box-arrow-in-left">
              Logout
            </a>
          </li>
        {{else}}
          <li>
            <a href="/login" class="bi bi-box-arrow-in-right">
              Login
            </a>
          </li>
          <li>
            <a href="/signup">Sign up</a>
          </li>
        {{/if}}
      </ul>
    </nav>

    <div class="container">
      {{#if messages.message}}
        <div class="message">
          {{messages.message}}
        </div>
      {{/if}}

      {{{body}}}
    </div>

    <footer>
      <div class="copy">
        <p><span>Thinking Out Loud</span> &nbsp; &copy; &nbsp; 2022</p>
        <a href="">teste</a>
      </div>
      <div class="contact">
        <a href="mailto:claudio.alexandre@discente.ufma.br">
          <i class="bi bi-envelope-fill"></i>
          claudio.alexandre@discente.ufma.br
        </a>
        <a href="http://github.com/cHenrique0" target="_blank">
          <i class="bi bi-github"></i>
          cHenrique0
        </a>
        <a href="http://linkedin.com/in/claudio-henrique-20" target="_blank">
          <i class="bi bi-linkedin"></i>
          Claudio Henrique
        </a>
      </div>
    </footer>
  </body>
</html>