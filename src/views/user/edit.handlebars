<div class="position-relative">
  <div class="position-absolute mt-5 top-0 start-50 translate-middle">
    {{!-- {{> alert}} --}}
  </div>
</div>

<a href="/user/profile" class="text-decoration-none mb-2">
  <i class="bi bi-arrow-left"></i>
  Back
</a>

<h1 class="fw-bold">Editing profile</h1>

<div class="d-flex gap-3">
  <form
    action="/user/edit/{{user.uuid}}"
    method="post"
    class="p-4 w-50 border rounded bg-body shadow-sm"
  >
    <div class="input-group mb-3">
      <span class="input-group-text fw-bold">Aa</span>
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="Type your name"
          required
          value="{{user.name}}"
        />
        <label for="name">Name</label>
      </div>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text fw-bold">Aa</span>
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          name="lastname"
          placeholder="Type your name"
          required
          value="{{user.lastname}}"
        />
        <label for="lastname">Last name</label>
      </div>
    </div>
    <div class="input-group mb-3">
      <i class="input-group-text bi bi-envelope-fill"></i>
      <div class="form-floating">
        <input
          type="email"
          class="form-control"
          name="email"
          placeholder="name@example.com"
          required
          value="{{user.email}}"
        />
        <label for="email">Email address</label>
      </div>
    </div>
    <div class="input-group mb-3">
      <i class="input-group-text bi bi-facebook"></i>
      <div class="form-floating">
        <input
          type="url"
          class="form-control"
          name="facebook"
          placeholder="https://www.facebook.com/user-name"
          value="{{user.facebook}}"
        />
        <label for="facebook">Facebook profile</label>
      </div>
    </div>
    <div class="input-group mb-3">
      <i class="input-group-text bi bi-twitter"></i>
      <div class="form-floating">
        <input
          type="text"
          class="form-control"
          name="twitter"
          placeholder="@username"
          value="{{user.twitter}}"
        />
        <label for="twitter">Twitter username</label>
      </div>
    </div>
    <div class="d-flex gap-3 align-items-end justify-content-between">
      <div class="form-floating">
        <textarea
          type="text"
          class="form-control"
          name="about"
          id="about"
          placeholder="Write about you"
        >{{user.about}}</textarea>
        <label for="about">Write about you...</label>
      </div>
      <button
        type="submit"
        class="btn btn-dark rounded-3 mt-3 justify-self-end"
      >
        <i class="bi bi-check-lg"></i>
        Save
      </button>
    </div>
  </form>
  <form
    action="/picture/upload"
    method="post"
    enctype="multipart/form-data"
    class="p-4 w-25 d-flex flex-column align-items-center border rounded bg-body shadow-sm gap-3"
  >
    {{#if user.UserPicture}}
      <div class="img-thumbnail rounded-pill bg-body my-2 mb-2">
        <div
          class="user-picture picture-128 rounded-pill"
          style="background-image: url(/{{user.UserPicture.name}})"
          id="preview-picture"
        >
        </div>
      </div>
    {{else}}
      <div class="img-thumbnail rounded-pill bg-body my-2 mb-2">
        <div
          class="user-picture picture-128 rounded-pill"
          style="background-image: url(/img/user-profile.png)"
          id="preview-picture"
        >
        </div>
      </div>
    {{/if}}
    <div class="input-group input-group-sm mb-3">
      <label
        for="profile-picture"
        class="input-group-text btn btn-dark border border-dark"
        id="border"
      >Browse...</label>
      <input
        type="file"
        class="form-control custom-input-file"
        name="userPicture"
        id="profile-picture"
      />
    </div>
    <button type="submit" class="btn btn-dark rounded-3">
      <i class="bi bi-card-image"></i>
      Save Picture
    </button>
  </form>
</div>